@model IEnumerable<Seminar.Models.Conference>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.conferenceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.conferenceVenue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.conferenceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.conferencePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organiser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.conferenceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.conferenceVenue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.conferenceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.conferencePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organiser.organiserID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.conferenceID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.conferenceID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.conferenceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
