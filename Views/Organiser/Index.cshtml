@model IEnumerable<Seminar.Models.Organiser>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.organiserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.organiserLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.organiserPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.organiserEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.organiserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.organiserLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.organiserPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.organiserEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.organiserID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.organiserID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.organiserID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
