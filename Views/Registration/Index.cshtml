@model IEnumerable<Seminar.Models.Registration>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Seminar ID
            </th>
            <th>
                Seminar Name
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Attendee.attendeeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attendee.attendeeFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attendee.attendeeLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conference.conferenceID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conference.conferenceName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.registrationID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.registrationID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.registrationID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
